{
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "eslint.run": "onSave",
  "cSpell.language": "en,pt_BR",
  "cSpell.words": [
    "commitlint",
    "facebook",
    "Recaptcha",
    "squadfy",
    "tailwindcss",
    "UMBRACO",
    "xgiant",
    "xlarge",
    "xxlarge",
    "xxsmall"
  ],
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true
}
